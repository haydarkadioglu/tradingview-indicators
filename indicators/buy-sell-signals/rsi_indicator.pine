//@version=5
indicator("RSI Indicator", overlay=false, shorttitle="RSI")

// ============================================================================
// INPUT PARAMETERS
// ============================================================================
rsi_length = input.int(14, "RSI Length", minval=1)
rsi_oversold = input.int(40, "Oversold Level", minval=0, maxval=50)
rsi_overbought = input.int(60, "Overbought Level", minval=50, maxval=100)

// ============================================================================
// CALCULATIONS
// ============================================================================
rsi = ta.rsi(close, rsi_length)

// ============================================================================
// PLOTTING
// ============================================================================
// Plot RSI line
plot(rsi, "RSI", color=color.new(color.purple, 0), linewidth=2)

// Plot horizontal lines for oversold/overbought levels
hline(rsi_oversold, "Oversold", color=color.new(color.green, 50), linestyle=hline.style_dashed)
hline(rsi_overbought, "Overbought", color=color.new(color.red, 50), linestyle=hline.style_dashed)
hline(50, "Middle", color=color.new(color.gray, 70), linestyle=hline.style_dotted)

// Background colors
bgcolor(rsi < rsi_oversold ? color.new(color.green, 90) : na, title="Oversold Zone")
bgcolor(rsi > rsi_overbought ? color.new(color.red, 90) : na, title="Overbought Zone")
