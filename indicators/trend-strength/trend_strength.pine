indicator("Trend Strength Signals [Enhanced]", "ð‘»ð’“ð’†ð’ð’… ð‘ºð’•ð’“ð’†ð’ð’ˆð’•ð’‰ ð‘¬ð’ð’‰ð’‚ð’ð’„ð’†ð’…", true)

// ============================================================================
// INPUT PARAMETERS
// ============================================================================
c = input.bool(true, "Enable Cloud", group="Display")
lenn = input.int(20, "Period", minval=5, maxval=100, group="Settings")
mult = input.float(2.5, "Standard Deviation Multiplier for TP", minval=1.0, maxval=5.0, step=0.1, group="Settings")
tc = input.int(25, "Gauge Size", minval=3, maxval=50, group="Display")
upColor = input.color(#00ffbb, "Up Color", group="Colors")
downColor = input.color(#ff1100, "Down Color", group="Colors")

// ============================================================================
// GAUGE FUNCTION
// ============================================================================
t = table.new(position.middle_right, 3, tc+1)

printTable(txt, col, row, color, txt1, col1, row1, color1) =>  
    table.cell(t, col, row, txt, bgcolor = color)
    table.cell(t, col1, row1, txt1, bgcolor = color1, text_color = color.white)

// ============================================================================
// TREND CALCULATION
// ============================================================================
len = lenn
src = close

basis = ta.sma(src, lenn)
upper = basis + ta.stdev(src, len, true)
lower = basis - ta.stdev(src, len, true)

upper1 = basis + ta.stdev(src, len, true) * mult
lower1 = basis - ta.stdev(src, len, true) * mult

var trend = 0

if src > basis and src > upper
    trend := 1
if src < basis and src < lower
    trend := -1

// ============================================================================
// PLOTTING
// ============================================================================
pu = plot(upper, "Upper Line", color.new(chart.fg_color, 80), display = c ? display.all : display.none)
pl = plot(lower, "Lower Line", color.new(chart.fg_color, 80), display = c ? display.all : display.none)

barcolor(src > upper ? upColor : src < lower ? downColor : chart.fg_color)

// Gradient calculation
grad = math.abs(basis - src) / (ta.highest(basis - src, 200)) * 100
grad1 = math.min(grad, 40)
grad1 := 100 - grad1

xMax = 100
xMin = 0
range_ = xMax - xMin
y = 1 - grad / range_
y := y > 100 ? 100 : y < 0 ? 0 : y

fill(pu, pl, color.new(chart.fg_color, ta.sma(grad1, 7)), "Trend Fill", display = c ? display.all : display.none)

// Trend signals
plotshape(ta.crossover(trend, 0), "Bullish Trend", shape.labelup, location.belowbar, upColor, text = "â–²", textcolor = chart.fg_color)
plotshape(ta.crossunder(trend, 0), "Bearish Trend", shape.labeldown, location.abovebar, downColor, text = "â–¼", textcolor = chart.fg_color)

// TP signals
plotchar(ta.crossover(src, lower1), "Short TP", "X", location.belowbar, upColor, size = size.tiny)
plotchar(ta.crossunder(src, upper1), "Long TP", "X", location.abovebar, downColor, size = size.tiny)

// ============================================================================
// DRAW GAUGE
// ============================================================================
for i = 1 to tc
    color_ = chart.fg_color
    color = color.from_gradient(i, 1, tc, src > basis ? upColor : downColor, color_)
    printTable("", 1, i, color, ">", 1, math.round(y * tc), #ffffff00)

// ============================================================================
// ALERTS
// ============================================================================
alertcondition(ta.cross(trend, 0), "Universal Trend Shift", "Trend Changed Direction!")
alertcondition(ta.crossover(trend, 0), "Bullish Trend", "Bullish Trend Started!")
alertcondition(ta.crossunder(trend, 0), "Bearish Trend", "Bearish Trend Started!")
alertcondition(ta.crossover(src, lower1) or ta.crossunder(src, upper1), "Universal TP", "Take Profit Signal!")
alertcondition(ta.crossover(src, lower1), "Short TP", "Short Take Profit!")
alertcondition(ta.crossunder(src, upper1), "Long TP", "Long Take Profit!")
